<!-- new language proficiencies -->
<tr class="fields">
  <td data-langid="">
    <%= f.collection_select(:language_id, @languages, :id, :name, {:include_blank => "Choose"}, {:class => "lang other-lang", :onchange => "update_langids(this);" }) %>
  </td>
  <td class="pad">
    <%= f.collection_select(:prof_category_id, @categories, :id, :prof_name) %>
  </td>
  <td class="pad small">
    <%= f.hidden_field :_destroy, {:class => "killme"} %>
    <%= link_to_remove_fields "Remove", f %>
  </td>
  <td class="center">
    <%= f.radio_button(:primary, true, :checked => f.object.primary, :name => "primary") %>
    <%#= f.object %>
  </td>
</tr>


