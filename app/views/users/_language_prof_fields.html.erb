<!-- new language proficiencies -->
<tr class="fields">
  <!-- default language is lang_id 1, English -->
  <td data-langid="1">
    <%= f.collection_select :language_id, @languages, :id, :name, { }, {:class => "lang other-lang dynamic-lang", :onchange => "update_langids(this);" } %>
  </td>
  <td class="pad">
    <%= f.collection_select(:prof_category_id, @categories, :id, :prof_name) %>
  </td>
  <td class="pad small">
    <%= f.hidden_field :_destroy, {:class => "killme"} %>
    <%= link_to_remove_fields "Remove", f %>
  </td>
  <td class="center">
    <%#= f.radio_button :primary, f.object.id, :checked => f.object.primary, :name => "primary", :id => f.object.id %>
    <%#= f.object.id %>
  </td>
</tr>


