<div class="fields">
  <%= f.label :primary_language, "Native Language" %>
  <span class="req">*</span>

  <div class="full">
    <span class="margin-btm">First Language :
    </span>
    <span id="native-lang">
      <% if @user.primary_language.nil? %>
        <% @user.primary_language = @languages.find_by_name('English') %>
      <% end %>
      <%= @user.primary_language %>
    </span>
   </div>
   <div>
     <%= f.collection_select(:primary_language, @languages, :id, :name, {:selected => @user.primary_language}, {:class => "lang"}) %>
   </div>
</div>
  
