<ul class="fields">
  <li class="leftHalf">
    <label class="desc">Name<span id="req_1" class="req">*</span></label>
    <span>
      <label for="first-name">First</label>
      <%= f.text_field :first_name, :type => "text", :class =>"field text", :tabindex =>"1", :required => true %>
    </span>
    <span>
      <label for="last-name">Last</label>
      <%= f.text_field :last_name, :type => "text", :class =>"field text", :tabindex =>"2", :required => true %>
    </span>      
  </li>
  <li >
    <label class="desc">Address<span id="req_2" class="req"></span></label>
    <div>
      <span class="address-area full">
        <label for="address">Area (HK Island, Kowloon, NT)</label>
        <input id="address_area" name="address_area" type="text" class="field text wide" value size="8" tabindex="3">
      </span>
    </div>
  </li>
  <li class="">
    <div class="">
      <label  id="other-lang-lbl">What languages do you speak?</label>
        <table>
          <tbody id="other-lang">
            <th>Language</th><th class="pad">Proficiency</th><th></th>
            <% if @user.languages.count == 0 %>
              <%= f.fields_for :language_profs, @langprof do |builder| %>
                  <%= render "language_prof_fields", :f => builder %>
              <% end %>
            <% else %>
              <th>First language</th>
              <%= f.fields_for :language_profs, @user.language_profs do |builder| %>
                  <%= render "language_prof", :f => builder  %>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <br>
      <%= link_to_add_fields "Add another", f, :language_profs %>
    </div>
  </li>
</ul>
