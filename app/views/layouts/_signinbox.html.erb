<div id="login-box">
<p>
  <% if current_user %>
    Signed in as
    <%= link_to current_user.email, current_user %>
  <% else %>
    <ul class="nobullet">
      <li class="active"><%= link_to "Sign up", new_user_registration_path, :method => :get%></li>
      <li><%= link_to "Sign in", user_session_path, :method => :post%></li>
    </ul>
  <% end %>
</p>
</div>
