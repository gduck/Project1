<!DOCTYPE html>
<html>
  <head>
    <title>want MAW</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript" src="https://code.jquery.com/ui/1.11.2/jquery-ui.min.js"></script>
    <link href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:400,200,300' rel='stylesheet' type='text/css'>

    <%= csrf_meta_tags %>
  </head>

  

  <body class="body-class">
    <!-- main content put into a 10 wide column for white space either side -->
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-xs-12">
          
          <header id="header">
            <div class="container">
              <div class="row">
                  <!-- <div class="col-md-10 col-md-offset-1 col-xs-12"> -->
                    <%= render 'layouts/header' %>
                  <!-- </div> -->
              </div>
            </div>
          </header>

          <main id="main">

            <%= render 'layouts/logospace' %>
            <%= render 'layouts/linkbar' %>

            <div id="content-box" class="col-xs-12 container">
              <!-- <div class="container"> -->
                <div class="row">
                  <div id="login-wrapper" class="hidden-xs hidden-sm col-md-1">
                    <%= render 'layouts/signinbox'%>
                  </div>
                  <div id="yield" class="col-xs-12 col-md-10 col-lg-10">
                    <%= yield %>
                  </div>
                </div>  <!-- end row -->
              <!-- </div> -->
            </div> <!-- end content box -->

          </main>

        </div>
      </div>
    </div>

          <footer class="footer">
            <div class="container">
              <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                  <div class="footer-inner">
                    <% if current_user %>
                      <%= "Signed in as #{current_user.email}" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </footer>

  </body>

</html>
