<div id="edit-company">
  <%= form_for @company  do |company_form| %>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 page-details">
      <% if @company.errors.any? %>
        <div class="error_messages">
          <h2><%= pluralize.(@company.errors.count, "error")%> prohibited this from being saved</h2>
          <ul>
            <% @company.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <header class="info">
        <h2>Edit details for <%= @company.name %></h2>
      </header>
    </div>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 page-show">
      <ul>
        <li>
          <label for="name">Company name</label>
          <%= company_form.text_field :name %>
        </li><li>
          <label for="website">Company website</label>
          <%= company_form.text_field :website %>
        </li>
      </ul>

      <div class="btn-group">
        <%= company_form.text_field :company_id, :value =>@company.id, :hidden => true%>
        <%= company_form.submit "Update", :class => "btn btn-default", :type => 'submit', :id => 'company_edit' %>
        <%= flash[:message] %>
      </div>
    </div>
  <% end %>
</div>
