<div id="new-company">
<!-- This is the view -->
  <%= form_for @company do |f| %>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 page-details">
      <h2>New Company</h2>

      <%= f.label :name, "Company name", :class => "control-label" %>
      <%= f.text_field :name, :type => "text", :required => true, :class => "form-control margin-bottom" %><br>

      <%= f.label :website, "web address" %>
      <%= f.text_field :website, :type=>"text", :class => "form-control margin-bottom"%><br>

      <%= f.submit "Register!", :class => "btn btn-default" %>

    </div>
 
  <% end %>
</div>
